<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:id="@+id/recycler_item"
    android:paddingEnd="16dp"
    android:background="@drawable/background_item_game"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    >

    <TextView
        android:id="@+id/title_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/neoneon"
        android:textFontWeight="1000"
        android:gravity="start"
        android:text="@string/example_name_game"
        android:textColor="@color/sea_100"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/favourite_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/favorite_for_click_disabled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_game"
        android:layout_width="228dp"
        android:layout_height="128dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_example"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView" />

    <Button
        android:id="@+id/buy_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_btn_item_game"
        android:fontFamily="@font/neoneon"
        android:gravity="center"
        android:text="Sale 10%"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/sea_100"
        android:textFontWeight="1000"
        app:layout_constraintBottom_toTopOf="@id/base_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_game"
        app:layout_constraintTop_toBottomOf="@id/favourite_btn"
        />

    <TextView
        android:id="@+id/base_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fonts_sans"
        android:gravity="center"
        android:text="Базовая цена: 1000 Р"
        android:textColor="@color/sea_100"
        android:textSize="6pt"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_game"
        app:layout_constraintTop_toBottomOf="@id/buy_btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>
